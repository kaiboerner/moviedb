
{if !empty($messages)}
<div class="container-fluid">
{foreach $messages as $message}
    {if 'error' === $message.type}
        {$class = 'danger'}
        {$icon = 'triangle-exclamation'}
    {elseif 'success' === $message.type}
        {$class = 'success'}
        {$icon = 'thumbs-up'}
    {elseif 'warning' === $message.type}
        {$class = 'warning'}
        {$icon = 'triangle-exclamation'}
    {elseif 'info' === $message.type}
        {$class = 'info'}
        {$icon = 'circle-info'}
    {/if}
    <div class="alert alert-{$class}">{if $icon}<i class="fa-solid fa-{$icon}"></i> {/if}{$message.text}</div>
{/foreach}
</div>
{/if}
